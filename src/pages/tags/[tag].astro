---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
    const posts = await getCollection("blog");

    // Recopilar todos los tags únicos
    const tagSet = new Set<string>();
    posts.forEach((post) => {
        post.data.tags.forEach((tag: string) => tagSet.add(tag));
    });

    // Crear una ruta por cada tag
    return Array.from(tagSet).map((tag) => {
        const filteredPosts = posts
            .filter((post) => post.data.tags.includes(tag))
            .sort(
                (a, b) =>
                    b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
            );

        return {
            params: { tag },
            props: { posts: filteredPosts, tag },
        };
    });
}

const { posts, tag } = Astro.props;

const pageTitle = `#${tag} | DevbyCes4r`;
const pageDescription = `Artículos sobre "${tag}" en el blog de DevbyCes4r.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <section class="mb-10 text-center">
        <a
            href="/tags"
            class="inline-flex items-center gap-1 text-sm text-slate-500 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors mb-4"
        >
            <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Todos los tags
        </a>
        <h1
            class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-3"
        >
            <span class="text-blue-600 dark:text-blue-400">#</span>{tag}
        </h1>
        <p class="text-lg text-slate-600 dark:text-slate-400 mb-3">
            {posts.length}
            {posts.length === 1 ? "artículo" : "artículos"}
        </p>
    </section>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {
            posts.map((post) => (
                <a href={`/blog/${post.slug}`} class="group">
                    <article class="bg-white dark:bg-slate-800 rounded-xl overflow-hidden border border-slate-200 dark:border-slate-700 hover:border-blue-500 transition-all duration-300 hover:shadow-xl hover:shadow-blue-500/10 h-full flex flex-col">
                        {post.data.image && (
                            <div class="aspect-[3/1] overflow-hidden">
                                <img
                                    src={post.data.image}
                                    alt={post.data.title}
                                    class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500"
                                    loading="lazy"
                                />
                            </div>
                        )}

                        <div class="p-6 flex flex-col flex-grow">
                            <div class="flex gap-2 mb-3">
                                {post.data.categories
                                    .slice(0, 2)
                                    .map((cat: string) => (
                                        <span class="text-xs font-medium px-2 py-1 bg-blue-100 dark:bg-slate-700 text-blue-700 dark:text-blue-300 rounded-full">
                                            {cat}
                                        </span>
                                    ))}
                            </div>

                            <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                                {post.data.title}
                            </h2>

                            <p class="text-slate-600 dark:text-slate-400 text-sm line-clamp-3 mb-4 flex-grow">
                                {post.data.description}
                            </p>

                            <div class="flex items-center justify-between text-xs text-slate-500 dark:text-slate-500 mt-auto pt-4 border-t border-slate-200 dark:border-slate-700">
                                <span>
                                    {post.data.publishDate.toLocaleDateString()}
                                </span>
                                <span>{post.data.readingTime}</span>
                            </div>
                        </div>
                    </article>
                </a>
            ))
        }
    </div>
</BaseLayout>
