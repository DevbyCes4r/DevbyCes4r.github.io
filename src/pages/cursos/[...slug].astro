---
import FAQSection from "@/components/FAQSection.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
    const courses = await getCollection("courses");
    return courses.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// FAQ Data
const generalFAQs = [
    {
        question: "¿Cómo funcionan los cursos?",
        answer: "Los cursos son 100% en línea y puedes hacerlos a tu ritmo. Tienes acceso completo a todas las clases en video, lecturas y actividades desde el momento de tu inscripción gratuita.",
    },
    {
        question: "¿Los cursos son realmente gratuitos?",
        answer: "Sí, la inscripción es 100% gratuita y te da acceso completo a todas las clases en video, lecturas y actividades. No necesitas pagar nada para aprender.",
    },
    {
        question: "¿Puedo obtener un certificado?",
        answerHTML: `<p class="mb-3">Sí, puedes obtener un <strong>certificado verificable internacionalmente</strong>. Tienes dos opciones:</p>
            <ul class="list-disc list-inside space-y-2 ml-4">
                <li>Adquirirlo al momento de inscribirte con un <strong>descuento especial</strong></li>
                <li>Comprarlo al finalizar el curso en su valor normal</li>
            </ul>`,
    },
    {
        question: "¿Qué incluye la certificación?",
        answerHTML: `<p class="mb-3">Al certificarte recibirás beneficios adicionales:</p>
            <ul class="list-disc list-inside space-y-2 ml-4">
                <li><strong>Acompañamiento personalizado</strong> del profesor</li>
                <li><strong>Retroalimentación</strong> de actividades</li>
                <li><strong>Soporte académico</strong> continuo</li>
                <li><strong>Constancias de estudio</strong> verificables</li>
            </ul>`,
    },
];
---

<BaseLayout
    title={`${entry.data.title} | Cursos Gratuitos`}
    description={entry.data.description}
>
    <div class="w-full max-w-5xl py-12">
        <a
            id="back-button"
            href="/cursos/"
            data-category={entry.data.mainCategory}
            class="inline-flex items-center text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-white mb-8 transition-colors"
        >
            <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Volver
        </a>

        <article
            class="bg-white dark:bg-slate-800 rounded-3xl p-8 md:p-12 border border-slate-200 dark:border-slate-700 shadow-2xl"
        >
            <header class="flex flex-col md:flex-row items-start gap-8 mb-12">
                <div class="flex-shrink-0 mx-auto md:mx-0">
                    <div
                        class="text-6xl p-6 bg-slate-100 dark:bg-slate-700/50 rounded-2xl shadow-inner"
                    >
                        {entry.data.icon}
                    </div>
                </div>
                <div class="flex-grow text-center md:text-left">
                    <div
                        class="flex flex-wrap justify-center md:justify-start gap-2 mb-4"
                    >
                        <span
                            class="px-3 py-1 bg-blue-100 dark:bg-blue-500/20 text-blue-700 dark:text-blue-300 rounded-full text-sm font-medium border border-blue-200 dark:border-blue-500/30"
                        >
                            {entry.data.category}
                        </span>
                        <span
                            class="px-3 py-1 bg-green-100 dark:bg-green-500/20 text-green-700 dark:text-green-300 rounded-full text-sm font-medium border border-green-200 dark:border-green-500/30"
                        >
                            Gratis
                        </span>
                    </div>
                    <h1
                        class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-4"
                    >
                        {entry.data.title}
                    </h1>
                    <p
                        class="text-xl text-slate-700 dark:text-slate-300 leading-relaxed"
                    >
                        {entry.data.description}
                    </p>
                </div>
            </header>

            {
                entry.data.videoId && (
                    <div class="mb-12 rounded-2xl overflow-hidden shadow-xl aspect-video bg-slate-100 dark:bg-slate-900">
                        <iframe
                            class="w-full h-full"
                            src={`https://www.youtube.com/embed/${entry.data.videoId}?autoplay=1&mute=1&rel=0&modestbranding=1`}
                            title="YouTube video player"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                            referrerpolicy="strict-origin-when-cross-origin"
                            allowfullscreen
                        />
                    </div>
                )
            }

            <div class="ai-content-wrapper mb-12">
                <Content />
            </div>

            <div
                class="flex flex-col items-center gap-4 pt-8 border-t border-slate-200 dark:border-slate-700"
            >
                <a
                    href={entry.data.affiliateLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-full md:w-auto px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-500 hover:to-purple-500 text-white rounded-xl font-bold text-lg shadow-lg hover:shadow-blue-500/25 hover:-translate-y-1 transition-all duration-300 text-center flex items-center justify-center gap-2"
                >
                    Ir al Curso
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        ></path>
                    </svg>
                </a>
                <p class="text-sm text-slate-500 dark:text-slate-500">
                    Al hacer clic serás redirigido a la plataforma del curso.
                </p>
            </div>
        </article>
    </div>

    <FAQSection faqs={generalFAQs} />

    <script>
        // Smart Back Button Logic
        const backButton = document.getElementById(
            "back-button",
        ) as HTMLAnchorElement;

        if (backButton) {
            const urlParams = new URLSearchParams(window.location.search);
            const ref = urlParams.get("ref");
            const referrer = document.referrer;

            let backUrl = "/cursos";
            let backText = "Volver a Cursos";

            // Priority 1: Check URL parameter (ref)
            if (ref) {
                if (ref.startsWith("categoria-")) {
                    // From category page
                    const categorySlug = ref.replace("categoria-", "");
                    backUrl = `/cursos/categoria/${categorySlug}`;
                    backText = "Volver a Categoría";
                } else if (
                    ref === "web-developer" ||
                    ref === "inteligencia-artificial" ||
                    ref === "analista-datos" ||
                    ref === "ingles"
                ) {
                    // From study plan page
                    backUrl = `/cursos/plan/${ref}`;
                    backText = "Volver al Plan";
                } else {
                    // Old anchor-based ref
                    backUrl = `/cursos#${ref}`;
                }
            }
            // Priority 2: Check document.referrer
            else if (referrer && referrer.includes(window.location.origin)) {
                const referrerUrl = new URL(referrer);

                if (referrerUrl.pathname.includes("/cursos/categoria/")) {
                    // Came from a category page
                    backUrl = referrerUrl.pathname;
                    backText = "Volver a Categoría";
                } else if (referrerUrl.pathname.includes("/cursos/plan/")) {
                    // Came from a study plan page
                    backUrl = referrerUrl.pathname;
                    backText = "Volver al Plan";
                } else if (referrerUrl.pathname.includes("/blog/")) {
                    // Came from a blog post
                    backUrl = referrerUrl.pathname;
                    backText = "Volver al Blog";
                } else if (
                    referrerUrl.pathname === "/cursos" ||
                    referrerUrl.pathname === "/cursos/"
                ) {
                    // Came from main courses page
                    backUrl = "/cursos";
                    if (referrerUrl.hash) {
                        backUrl += referrerUrl.hash;
                    }
                }
            }
            // Priority 3: Default to category page
            else {
                const categorySlug = backButton.dataset.category;
                if (categorySlug) {
                    backUrl = `/cursos/categoria/${categorySlug}`;
                    backText = "Volver a Categoría";
                } else {
                    backUrl = "/cursos";
                    backText = "Volver a Cursos";
                }
            }

            // Update button
            backButton.href = backUrl;
            const textNode = backButton.childNodes[2]; // The text node after SVG
            if (textNode && textNode.nodeType === Node.TEXT_NODE) {
                textNode.textContent = backText;
            }
        }
    </script>
</BaseLayout>
