---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
    const courses = await getCollection("courses");
    return courses.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout
    title={`${entry.data.title} | Cursos Gratuitos`}
    description={entry.data.description}
>
    <div class="max-w-3xl mx-auto py-12">
        <a
            href="/cursos"
            class="inline-flex items-center text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-white mb-8 transition-colors"
        >
            <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Volver a Cursos
        </a>

        <article
            class="bg-white dark:bg-slate-800 rounded-3xl p-8 md:p-12 border border-slate-200 dark:border-slate-700 shadow-2xl"
        >
            <header class="text-center mb-10">
                <div
                    class="text-6xl mb-6 inline-block p-4 bg-slate-100 dark:bg-slate-700/50 rounded-2xl shadow-inner"
                >
                    {entry.data.icon}
                </div>
                <h1
                    class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-4"
                >
                    {entry.data.title}
                </h1>
                <div class="flex justify-center gap-2 mb-6">
                    <span
                        class="px-3 py-1 bg-blue-100 dark:bg-blue-500/20 text-blue-700 dark:text-blue-300 rounded-full text-sm font-medium border border-blue-200 dark:border-blue-500/30"
                    >
                        {entry.data.category}
                    </span>
                    <span
                        class="px-3 py-1 bg-green-100 dark:bg-green-500/20 text-green-700 dark:text-green-300 rounded-full text-sm font-medium border border-green-200 dark:border-green-500/30"
                    >
                        Gratis
                    </span>
                </div>
                <p
                    class="text-xl text-slate-700 dark:text-slate-300 leading-relaxed"
                >
                    {entry.data.description}
                </p>
            </header>

            <div
                class="prose dark:prose-invert prose-lg max-w-none mb-12 text-slate-700 dark:text-slate-300"
            >
                <Content />
            </div>

            <div
                class="flex flex-col items-center gap-4 pt-8 border-t border-slate-200 dark:border-slate-700"
            >
                <a
                    href={entry.data.affiliateLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-full md:w-auto px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-500 hover:to-purple-500 text-white rounded-xl font-bold text-lg shadow-lg hover:shadow-blue-500/25 hover:-translate-y-1 transition-all duration-300 text-center flex items-center justify-center gap-2"
                >
                    Ir al Curso
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        ></path>
                    </svg>
                </a>
                <p class="text-sm text-slate-500 dark:text-slate-500">
                    Al hacer clic ser√°s redirigido a la plataforma del curso.
                </p>
            </div>
        </article>
    </div>
</BaseLayout>
