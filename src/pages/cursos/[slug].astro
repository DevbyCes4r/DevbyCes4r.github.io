---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import FAQSection from "../../components/FAQSection.astro";
import { getAllCategories } from "../../lib/categories";

export async function getStaticPaths() {
    const courses = await getCollection("courses");
    const categories = await getAllCategories();

    const coursePaths = courses.map((entry) => ({
        params: { slug: entry.slug },
        props: { type: "course" as const, entry },
    }));

    const categoryPaths = categories.map((entry) => ({
        params: { slug: entry.slug },
        props: { type: "category" as const, entry },
    }));

    return [...coursePaths, ...categoryPaths];
}

const { type, entry } = Astro.props;

// --- COURSE LOGIC ---
let CourseContent: any;
if (type === "course") {
    const { Content } = await entry.render();
    CourseContent = Content;
}

// --- CATEGORY LOGIC ---
let categoryCourses: CollectionEntry<"courses">[] = [];
if (type === "category") {
    const allCourses = await getCollection("courses");
    categoryCourses = allCourses
        .filter((course) => course.data.category === entry.slug)
        .sort(
            (a, b) =>
                b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
        );
}

// --- RELATED COURSES LOGIC ---
let relatedCourses: CollectionEntry<"courses">[] = [];
if (type === "course") {
    const allCourses = await getCollection("courses");
    // Filter courses from the same category, excluding the current course
    const sameCategoryCourses = allCourses.filter(
        (course) => 
            course.data.category === entry.data.category && 
            course.slug !== entry.slug
    );
    
    // Shuffle and take 2 random courses
    relatedCourses = sameCategoryCourses
        .sort(() => Math.random() - 0.5)
        .slice(0, 2);
}

// FAQ Data (Shared)
const generalFAQs = [
    {
        question: "¿Cómo funcionan los cursos?",
        answer: "Los cursos son 100% en línea y puedes hacerlos a tu ritmo. Tienes acceso completo a todas las clases en video, lecturas y actividades desde el momento de tu inscripción gratuita.",
    },
    {
        question: "¿Los cursos son realmente gratuitos?",
        answer: "Sí, la inscripción es 100% gratuita y te da acceso completo a todas las clases en video, lecturas y actividades. No necesitas pagar nada para aprender.",
    },
    {
        question: "¿Puedo obtener un certificado?",
        answerHTML: `<p class="mb-3">Sí, puedes obtener un <strong>certificado verificable internacionalmente</strong>. Tienes dos opciones:</p>
            <ul class="list-disc list-inside space-y-2 ml-4">
                <li>Adquirirlo al momento de inscribirte con un <strong>descuento especial</strong></li>
                <li>Comprarlo al finalizar el curso en su valor normal</li>
            </ul>`,
    },
    {
        question: "¿Qué incluye la certificación?",
        answerHTML: `<p class="mb-3">Al certificarte recibirás beneficios adicionales:</p>
            <ul class="list-disc list-inside space-y-2 ml-4">
                <li><strong>Acompañamiento personalizado</strong> del profesor</li>
                <li><strong>Retroalimentación</strong> de actividades</li>
                <li><strong>Soporte académico</strong> continuo</li>
                <li><strong>Constancias de estudio</strong> verificables</li>
            </ul>`,
    },
];

// Page Metadata
const pageTitle =
    type === "course"
        ? `${entry.data.title} | Cursos Gratuitos`
        : `Cursos de ${entry.data.name} Gratuitos | DevbyCes4r`;

const pageDescription =
    type === "course"
        ? entry.data.description
        : `Aprende ${entry.data.name.toLowerCase()} con nuestros ${categoryCourses.length} cursos gratuitos. ${entry.data.description}. Certificación opcional disponible.`;
---

<BaseLayout title={pageTitle} description={pageDescription} image={type === "course" ? (entry.data.coverImage || "/images/courses/default.webp") : "/images/courses/categories.webp"}>
    {
        type === "course" ? (
            /* COURSE LAYOUT */
            <div class="w-full max-w-5xl pb-8">
                <a
                    id="back-button"
                    href="/cursos/"
                    data-category={entry.data.category}
                    class="inline-flex items-center text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-white mb-4 md:mb-6 transition-colors"
                >
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18"
                        />
                    </svg>
                    Volver
                </a>

                    <header>
                        <div class="flex items-start gap-3 md:gap-4 lg:gap-6 mb-4 md:mb-5">
                            {/* Mobile: Sin icono (distrae) */}
                            {/* Tablet: Icono mediano */}
                            {/* Desktop: Cover image grande */}
                            
                            {/* Cover Image - Solo desktop con fallback a icono */}
                            {entry.data.coverImage ? (
                                <div class="hidden lg:block flex-shrink-0 w-44 h-28 rounded-xl overflow-hidden shadow-lg">
                                    <img 
                                        src={entry.data.coverImage} 
                                        alt={entry.data.title}
                                        class="w-full h-full object-cover"
                                        loading="eager"
                                    />
                                </div>
                            ) : (
                                <div class="hidden lg:flex flex-shrink-0 w-44 h-28 bg-slate-100 dark:bg-slate-700/50 rounded-xl items-center justify-center text-5xl shadow-inner">
                                    {entry.data.icon}
                                </div>
                            )}
                            
                            {/* Icon - Solo tablet (md a lg) */}
                            <div class="hidden md:flex lg:hidden flex-shrink-0 w-16 h-16 bg-slate-100 dark:bg-slate-700/50 rounded-xl items-center justify-center text-3xl shadow-inner">
                                {entry.data.icon}
                            </div>
                            
                            <div class="flex-1 min-w-0">
                                {/* Badge Gratis minimalista - Arriba del título */}
                                <div class="flex items-center gap-2 mb-2">
                                    <span class="inline-block px-2.5 py-0.5 bg-green-100 dark:bg-green-500/20 text-green-700 dark:text-green-300 rounded-full text-xs font-semibold">
                                        Gratis
                                    </span>
                                    {/* Solo primer tag en móvil/tablet, oculto en desktop */}
                                    {entry.data.tags && entry.data.tags[0] && (
                                        <span class="lg:hidden inline-block px-2.5 py-0.5 bg-blue-100 dark:bg-blue-500/20 text-blue-700 dark:text-blue-300 rounded-full text-xs font-medium">
                                            {entry.data.tags[0]}
                                        </span>
                                    )}
                                </div>
                                
                                <h1 class="text-xl md:text-2xl lg:text-3xl font-bold text-slate-900 dark:text-white mb-2 md:mb-3 leading-tight">
                                    {entry.data.title}
                                </h1>
                                
                                {/* Descripción: Oculta en móvil, visible tablet+ */}
                                <p class="hidden md:block text-base lg:text-lg text-slate-600 dark:text-slate-400 leading-snug line-clamp-2">
                                    {entry.data.description}
                                </p>
                            </div>
                        </div>
                        
                        {/* Primary CTA Button - Apple-Inspired Design */}
                        <div class="flex flex-col items-stretch md:items-end gap-1.5">
                            <a
                                id="course-access-btn"
                                href={entry.data.affiliateLink}
                                target="_blank"
                                rel="noopener noreferrer"
                                data-course-slug={entry.slug}
                                data-course-title={entry.data.title}
                                data-course-category={entry.data.category}
                                class="apple-cta-btn group inline-flex items-center justify-center gap-2 px-6 py-3 md:px-8 md:py-4 bg-gradient-to-br from-blue-600 to-purple-600 dark:from-blue-500 dark:to-purple-500 text-white rounded-xl font-semibold text-base md:text-lg shadow-lg hover:shadow-xl transition-all duration-300"
                            >
                                <span>Ver Curso Gratis</span>
                                <svg
                                    class="w-5 h-5 transition-transform group-hover:translate-x-1 group-hover:-translate-y-1 duration-300"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                    />
                                </svg>
                            </a>
                            <p class="text-xs text-slate-500 dark:text-slate-400 flex items-center justify-center md:justify-end gap-1">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span>Enlace directo a la plataforma oficial</span>
                            </p>
                        </div>
                        
                        <style>
                            /* Apple-Inspired CTA Button */
                            .apple-cta-btn {
                                position: relative;
                                overflow: hidden;
                            }
                            
                            .apple-cta-btn::before {
                                content: '';
                                position: absolute;
                                inset: 0;
                                background: linear-gradient(
                                    135deg,
                                    rgba(255, 255, 255, 0.1) 0%,
                                    rgba(255, 255, 255, 0) 50%,
                                    rgba(255, 255, 255, 0.1) 100%
                                );
                                opacity: 0;
                                transition: opacity 0.3s ease;
                            }
                            
                            .apple-cta-btn:hover::before {
                                opacity: 1;
                            }
                            
                            .apple-cta-btn:hover {
                                transform: translateY(-1px);
                                box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.2), 0 10px 10px -5px rgba(59, 130, 246, 0.1);
                            }
                            
                            .apple-cta-btn:active {
                                transform: translateY(0);
                                box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.2), 0 4px 6px -2px rgba(59, 130, 246, 0.1);
                            }
                            
                            /* Sticky Floating Button */
                            .sticky-floating-btn {
                                position: relative;
                                overflow: hidden;
                                backdrop-filter: blur(10px);
                                -webkit-backdrop-filter: blur(10px);
                            }
                            
                            .sticky-floating-btn::before {
                                content: '';
                                position: absolute;
                                inset: 0;
                                background: linear-gradient(
                                    135deg,
                                    rgba(255, 255, 255, 0.15) 0%,
                                    rgba(255, 255, 255, 0) 50%,
                                    rgba(255, 255, 255, 0.15) 100%
                                );
                                opacity: 0;
                                transition: opacity 0.3s ease;
                            }
                            
                            .sticky-floating-btn:hover::before {
                                opacity: 1;
                            }
                            
                            .sticky-floating-btn:hover {
                                transform: translateY(-2px) scale(1.02);
                                box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.3), 0 10px 10px -5px rgba(59, 130, 246, 0.2);
                            }
                            
                            .sticky-floating-btn:active {
                                transform: translateY(0) scale(0.98);
                            }
                        </style>
                    </header>

                    {entry.data.videoId && (
                        <div class="mt-5 md:mt-6">
                            {/* Desktop: iframe con autoplay muted */}
                            <div class="hidden md:block">
                                <div class="rounded-t-2xl overflow-hidden shadow-xl aspect-video bg-slate-100 dark:bg-slate-900 relative">
                                    <iframe
                                        class="w-full h-full"
                                        src={`https://www.youtube.com/embed/${entry.data.videoId}?autoplay=1&mute=1&rel=0&modestbranding=1`}
                                        title="Video de presentación del curso"
                                        frameborder="0"
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                        referrerpolicy="strict-origin-when-cross-origin"
                                        allowfullscreen
                                    />
                                    
                                    {/* Audio Reminder Notification */}
                                    <div id="audio-reminder" class="absolute top-1/4 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-slate-900/90 dark:bg-slate-800/90 backdrop-blur-sm text-white px-4 py-2 rounded-full shadow-lg flex items-center gap-2 text-sm font-medium transition-opacity duration-500 pointer-events-none">
                                        <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" />
                                        </svg>
                                        <span>Activa el sonido en la barra del video</span>
                                    </div>
                                </div>
                                <div class="bg-slate-900/90 dark:bg-slate-800/90 px-4 py-2 shadow-xl">
                                    <p class="text-center text-sm text-white font-medium">Presentación del curso</p>
                                </div>
                            </div>

                            {/* Móvil: Cover image con play centrado */}
                            <div class="md:hidden">
                                <div id="mobile-video-wrapper">
                                    <button
                                        id="mobile-play-btn"
                                        data-video-id={entry.data.videoId}
                                        class="mobile-video-thumb group relative w-full rounded-t-2xl overflow-hidden shadow-xl aspect-video bg-slate-900 cursor-pointer block focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2"
                                        aria-label="Ver video de presentación del curso"
                                    >
                                        <img
                                            src={entry.data.coverImage || `https://img.youtube.com/vi/${entry.data.videoId}/hqdefault.jpg`}
                                            alt={`Presentación: ${entry.data.title}`}
                                            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105 group-active:scale-100"
                                            loading="lazy"
                                        />
                                        {/* Overlay oscuro */}
                                        <div class="absolute inset-0 bg-black/30 group-hover:bg-black/40 transition-colors duration-300" />
                                        {/* Botón play centrado */}
                                        <div class="absolute inset-0 flex items-center justify-center">
                                            <div class="w-16 h-16 rounded-full bg-white/90 dark:bg-white/95 shadow-lg flex items-center justify-center group-hover:scale-110 group-active:scale-95 transition-transform duration-200">
                                                <svg class="w-6 h-6 text-blue-600" viewBox="0 0 16 18" fill="currentColor" style="margin-left: 2px;">
                                                    <path d="M0 0v18l16-9L0 0z" />
                                                </svg>
                                            </div>
                                        </div>
                                    </button>
                                </div>
                                <div id="mobile-video-container" class="hidden">
                                    <div class="rounded-t-2xl overflow-hidden shadow-xl aspect-video bg-slate-100 dark:bg-slate-900">
                                        <iframe
                                            id="mobile-video-iframe"
                                            class="w-full h-full"
                                            title="Video de presentación del curso"
                                            frameborder="0"
                                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                            referrerpolicy="strict-origin-when-cross-origin"
                                            allowfullscreen
                                        />
                                    </div>
                                </div>
                                <div class="bg-slate-900/90 dark:bg-slate-800/90 px-4 py-2 shadow-xl">
                                    <p class="text-center text-sm text-white font-medium">Presentación del curso</p>
                                </div>
                            </div>

                            <script>
                                // Desktop: Fade out audio reminder after 5 seconds
                                const audioReminder = document.getElementById('audio-reminder');
                                if (audioReminder) {
                                    setTimeout(() => {
                                        audioReminder.style.opacity = '0';
                                        setTimeout(() => {
                                            audioReminder.style.display = 'none';
                                        }, 500);
                                    }, 5000);
                                }

                                // Móvil: Cargar video con audio al hacer clic en la thumbnail
                                const mobilePlayBtn = document.getElementById('mobile-play-btn');
                                if (mobilePlayBtn) {
                                    mobilePlayBtn.addEventListener('click', () => {
                                        const videoId = mobilePlayBtn.getAttribute('data-video-id');
                                        const wrapper = document.getElementById('mobile-video-wrapper');
                                        const container = document.getElementById('mobile-video-container');
                                        const iframe = document.getElementById('mobile-video-iframe') as HTMLIFrameElement;
                                        
                                        if (iframe && videoId && wrapper && container) {
                                            iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0&modestbranding=1`;
                                            wrapper.classList.add('hidden');
                                            container.classList.remove('hidden');
                                        }
                                    });
                                }

                            </script>
                        </div>
                    )}

                    <div class="ai-content-wrapper">
                        <CourseContent />
                    </div>

                    {entry.data.documentUrl && (
                        <div class="mt-12">
                            <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-6 flex items-center gap-3">
                                <span class="bg-red-100 dark:bg-red-500/20 text-red-600 dark:text-red-400 p-2 rounded-lg">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                                    </svg>
                                </span>
                                Material adicional
                            </h2>
                            <div class="w-full h-[600px] md:h-[850px] rounded-2xl overflow-hidden shadow-xl border border-slate-200 dark:border-slate-700 bg-slate-100 dark:bg-slate-900">
                                <iframe
                                    src={`${entry.data.documentUrl}#toolbar=0`}
                                    class="w-full h-full"
                                    title={`Documento del curso ${entry.data.title}`}
                                >
                                </iframe>
                            </div>
                            <div class="mt-4 text-center md:text-right">
                                <a 
                                    href={entry.data.documentUrl} 
                                    target="_blank" 
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center gap-2 text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors"
                                >
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                    </svg>
                                    Abrir en nueva pestaña
                                </a>
                            </div>
                        </div>
                    )}

                {/* Sticky Floating CTA Button - Apple-Inspired Design */}
                <div id="sticky-cta" class="fixed bottom-6 right-6 z-50 opacity-0 pointer-events-none transition-all duration-300">
                    <a
                        id="sticky-course-btn"
                        href={entry.data.affiliateLink}
                        target="_blank"
                        rel="noopener noreferrer"
                        data-course-slug={entry.slug}
                        data-course-title={entry.data.title}
                        class="sticky-floating-btn group flex items-center gap-2 px-6 py-3 bg-gradient-to-br from-blue-600 to-purple-600 dark:from-blue-500 dark:to-purple-500 text-white rounded-full font-semibold shadow-xl transition-all duration-300"
                    >
                        <span>Ver Curso</span>
                        <svg
                            class="w-5 h-5 transition-transform group-hover:translate-x-0.5 group-hover:-translate-y-0.5 duration-300"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                            />
                        </svg>
                    </a>
                </div>
            </div>
        ) : (
            /* CATEGORY LAYOUT */
            <div class="min-h-screen pb-8 px-4">
                <div class="max-w-5xl mx-auto">
                    {/* Breadcrumbs */}
                    <nav class="mb-8 text-sm" aria-label="Breadcrumb">
                        <ol class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                            <li>
                                <a
                                    href="/"
                                    class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                                >
                                    Inicio
                                </a>
                            </li>
                            <li aria-hidden="true">/</li>
                            <li>
                                <a
                                    href="/cursos"
                                    class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                                >
                                    Cursos
                                </a>
                            </li>
                            <li aria-hidden="true">/</li>
                            <li>
                                <a
                                    href="/cursos#categorias"
                                    class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                                    >Categorias</a
                                >
                            </li>
                        </ol>
                    </nav>

                    {/* Header */}
                    <div class="text-center mb-12">
                        <div class="text-6xl mb-4 animate-bounce">
                            {entry.data.icon}
                        </div>
                        <h1 class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-600 via-blue-600 to-pink-600 dark:from-purple-400 dark:via-blue-500 dark:to-pink-500 mb-4">
                            Cursos de {entry.data.name}
                        </h1>
                        <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto mb-2">
                            {entry.data.description}
                        </p>
                        <p class="text-slate-500 dark:text-slate-500">
                            {categoryCourses.length}{" "}
                            {categoryCourses.length === 1 ? "curso" : "cursos"}{" "}
                            disponibles
                        </p>
                    </div>

                    {/* Courses Grid */}
                    <div class="mb-16">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            {categoryCourses.map((course) => (
                                <a
                                    href={`/cursos/${course.slug}`}
                                    target="_blank"
                                    data-course-slug={course.slug}
                                    data-course-title={course.data.title}
                                    class="course-card-link group relative block p-6 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-2xl hover:border-purple-500 hover:shadow-xl hover:shadow-purple-500/10 transition-all duration-300"
                                >
                                    <div class="flex items-start gap-4">
                                        {/* Icon - se oculta en hover */}
                                        <div class="flex-shrink-0 w-16 transition-opacity duration-300 group-hover:opacity-0">
                                            <div class="h-16 w-16 bg-slate-100 dark:bg-slate-700/50 p-2 rounded-xl flex items-center justify-center text-center text-lg leading-tight overflow-hidden">
                                                {course.data.icon}
                                            </div>
                                        </div>
                                        <div class="transition-transform duration-300 group-hover:-translate-x-20" style="width: calc(100% - 80px);">
                                            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
                                                {course.data.title}
                                            </h3>
                                            <p class="text-slate-600 dark:text-slate-400 text-sm line-clamp-2 mb-3">
                                                {course.data.description}
                                            </p>
                                            {course.data.tags && course.data.tags.length > 0 && (
                                                <span class="text-xs font-medium px-2 py-1 bg-purple-100 dark:bg-purple-500/10 text-purple-700 dark:text-purple-300 rounded-full border border-purple-200 dark:border-purple-500/20">
