                        referrer &&
                        referrer.includes(window.location.origin)
                    ) {
                        const referrerUrl = new URL(referrer);

                        if (referrerUrl.pathname.includes("/cursos/")) {
                            // Came from a category page (now under /cursos/) or another course
                             // This is tricky because /cursos/slug could be a category or course.
                             // But if they came from there, going back is safe.
                            backUrl = referrerUrl.pathname;
                        } else if (referrerUrl.pathname.includes("/rutas/")) {
                            // Came from a study plan page
                            backUrl = referrerUrl.pathname;
                        } else if (referrerUrl.pathname.includes("/blog/")) {
                            // Came from a blog post
                            backUrl = referrerUrl.pathname;
                        } else if (
                            referrerUrl.pathname === "/cursos" ||
                            referrerUrl.pathname === "/cursos/"
                        ) {
                            // Came from main courses page
                            backUrl = "/cursos";
                            if (referrerUrl.hash) {
                                backUrl += referrerUrl.hash;
                            }
                        }
                    }
                    // Priority 3: Default to category page
                    else {
                        const categorySlug = backButton.dataset.category;
                        if (categorySlug) {
                            backUrl = `/cursos/${categorySlug}`;
                        } else {
                            backUrl = "/cursos";
                        }
                    }

                    // Update button
                    backButton.href = backUrl;
                }

                // Sticky Floating CTA: solo en el rango entre "el primer CTA ya se ocultó" y "aún no llegamos al segundo CTA fijo"
                const stickyCTA = document.getElementById("sticky-cta");
                const ctaMain = document.getElementById("course-access-btn");
                const ctaAnchor = document.getElementById("cta-anchor");

                function updateStickyCTA() {
                    if (!stickyCTA || !ctaMain || !ctaAnchor) return;

                    const mainRect = ctaMain.getBoundingClientRect();
                    const anchorRect = ctaAnchor.getBoundingClientRect();

                    // Primer CTA oculto = ya scrolleamos y salió por arriba (su borde inferior está por encima del viewport)
                    const mainOutOfView = mainRect.bottom < 0;
                    // Segundo CTA aún no llegado = está debajo del viewport (su borde superior está por debajo del viewport)
                    const anchorNotReached = anchorRect.top > window.innerHeight;

                    const shouldShowFloating = mainOutOfView && anchorNotReached;

                    if (shouldShowFloating) {
                        stickyCTA.classList.remove("opacity-0", "pointer-events-none");
                        stickyCTA.classList.add("opacity-100", "pointer-events-auto");
                    } else {
                        stickyCTA.classList.add("opacity-0", "pointer-events-none");
                        stickyCTA.classList.remove("opacity-100", "pointer-events-auto");
                    }
                }

                let ticking = false;
                function onScroll() {
                    if (!ticking) {
                        window.requestAnimationFrame(() => {
                            updateStickyCTA();
                            ticking = false;
                        });
                        ticking = true;
                    }
                }

                window.addEventListener("scroll", onScroll, { passive: true });
                updateStickyCTA();
            </script>
