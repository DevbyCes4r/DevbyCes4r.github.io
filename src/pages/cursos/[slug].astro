---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import FAQSection from "../../components/FAQSection.astro";
import { getAllCategories } from "../../lib/categories";

export async function getStaticPaths() {
    const courses = await getCollection("courses");
    const categories = await getAllCategories();

    const coursePaths = courses.map((entry) => ({
        params: { slug: entry.slug },
        props: { type: "course" as const, entry },
    }));

    const categoryPaths = categories.map((entry) => ({
        params: { slug: entry.slug },
        props: { type: "category" as const, entry },
    }));

    return [...coursePaths, ...categoryPaths];
}

const { type, entry } = Astro.props;

// --- COURSE LOGIC ---
let CourseContent: any;
if (type === "course") {
    const { Content } = await entry.render();
    CourseContent = Content;
}

// --- CATEGORY LOGIC ---
let categoryCourses: CollectionEntry<"courses">[] = [];
if (type === "category") {
    const allCourses = await getCollection("courses");
    categoryCourses = allCourses
        .filter((course) => course.data.category === entry.slug)
        .sort(
            (a, b) =>
                b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
        );
}

// FAQ Data (Shared)
const generalFAQs = [
    {
        question: "쮺칩mo funcionan los cursos?",
        answer: "Los cursos son 100% en l칤nea y puedes hacerlos a tu ritmo. Tienes acceso completo a todas las clases en video, lecturas y actividades desde el momento de tu inscripci칩n gratuita.",
    },
    {
        question: "쯃os cursos son realmente gratuitos?",
        answer: "S칤, la inscripci칩n es 100% gratuita y te da acceso completo a todas las clases en video, lecturas y actividades. No necesitas pagar nada para aprender.",
    },
    {
        question: "쯇uedo obtener un certificado?",
        answerHTML: `<p class="mb-3">S칤, puedes obtener un <strong>certificado verificable internacionalmente</strong>. Tienes dos opciones:</p>
            <ul class="list-disc list-inside space-y-2 ml-4">
                <li>Adquirirlo al momento de inscribirte con un <strong>descuento especial</strong></li>
                <li>Comprarlo al finalizar el curso en su valor normal</li>
            </ul>`,
    },
    {
        question: "쯈u칠 incluye la certificaci칩n?",
        answerHTML: `<p class="mb-3">Al certificarte recibir치s beneficios adicionales:</p>
            <ul class="list-disc list-inside space-y-2 ml-4">
                <li><strong>Acompa침amiento personalizado</strong> del profesor</li>
                <li><strong>Retroalimentaci칩n</strong> de actividades</li>
                <li><strong>Soporte acad칠mico</strong> continuo</li>
                <li><strong>Constancias de estudio</strong> verificables</li>
            </ul>`,
    },
];

// Page Metadata
const pageTitle =
    type === "course"
        ? `${entry.data.title} | Cursos Gratuitos`
        : `Cursos de ${entry.data.name} Gratuitos | DevbyCes4r`;

const pageDescription =
    type === "course"
        ? entry.data.description
        : `Aprende ${entry.data.name.toLowerCase()} con nuestros ${categoryCourses.length} cursos gratuitos. ${entry.data.description}. Certificaci칩n opcional disponible.`;
---

<BaseLayout title={pageTitle} description={pageDescription} image={type === "course" ? (entry.data.coverImage || "/images/courses/default.webp") : "/images/courses/categories.webp"}>
    {
        type === "course" ? (
            /* COURSE LAYOUT */
            <div class="w-full max-w-5xl py-12">
                <a
                    id="back-button"
                    href="/cursos/"
                    data-category={entry.data.category}
                    class="inline-flex items-center text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-white mb-8 transition-colors"
                >
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18"
                        />
                    </svg>
                    Volver
                </a>

                <article class="bg-white dark:bg-slate-800 rounded-3xl p-6 md:p-12 border border-slate-200 dark:border-slate-700 shadow-2xl">
                    <header>
                        <div class="flex flex-col md:flex-row items-center md:items-start gap-6 md:gap-8 mb-6">
                            <div class="flex-shrink-0">
                                <div class="text-5xl md:text-6xl p-4 md:p-6 bg-slate-100 dark:bg-slate-700/50 rounded-2xl shadow-inner">
                                    {entry.data.icon}
                                </div>
                            </div>
                            <div class="flex-grow text-center md:text-left w-full">
                                <div class="flex flex-wrap justify-center md:justify-start gap-2 mb-3">
                                    {entry.data.tags && entry.data.tags.map(tag => (
                                        <span class="px-3 py-1 bg-blue-100 dark:bg-blue-500/20 text-blue-700 dark:text-blue-300 rounded-full text-sm font-medium border border-blue-200 dark:border-blue-500/30">
                                            {tag}
                                        </span>
                                    ))}
                                    <span class="px-3 py-1 bg-green-100 dark:bg-green-500/20 text-green-700 dark:text-green-300 rounded-full text-sm font-medium border border-green-200 dark:border-green-500/30">
                                        Gratis
                                    </span>
                                </div>
                                <h1 class="text-1xl md:text-2xl lg:text-3xl font-bold text-slate-900 dark:text-white mb-3 md:mb-4">
                                    {entry.data.title}
                                </h1>
                                <p class="text-lg md:text-xl text-slate-700 dark:text-slate-300 leading-relaxed">
                                    {entry.data.description}
                                </p>
                            </div>
                        </div>
                        
                        {/* Primary CTA Button - Apple-Inspired Design */}
                        <div class="flex justify-center md:justify-end">
                            <a
                                href={entry.data.affiliateLink}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="apple-cta-btn group inline-flex items-center justify-center gap-2 px-8 py-4 bg-gradient-to-br from-blue-600 to-purple-600 dark:from-blue-500 dark:to-purple-500 text-white rounded-xl font-semibold text-lg shadow-lg hover:shadow-xl transition-all duration-300 w-full md:w-auto"
                            >
                                <svg
                                    class="w-5 h-5 transition-transform group-hover:scale-110 duration-300"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
                                    />
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                    />
                                </svg>
                                <span>Acceder al Curso</span>
                                <svg
                                    class="w-5 h-5 transition-transform group-hover:translate-x-1 duration-300"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                    />
                                </svg>
                            </a>
                        </div>
                        
                        <style>
                            /* Apple-Inspired CTA Button */
                            .apple-cta-btn {
                                position: relative;
                                overflow: hidden;
                            }
                            
                            .apple-cta-btn::before {
                                content: '';
                                position: absolute;
                                inset: 0;
                                background: linear-gradient(
                                    135deg,
                                    rgba(255, 255, 255, 0.1) 0%,
                                    rgba(255, 255, 255, 0) 50%,
                                    rgba(255, 255, 255, 0.1) 100%
                                );
                                opacity: 0;
                                transition: opacity 0.3s ease;
                            }
                            
                            .apple-cta-btn:hover::before {
                                opacity: 1;
                            }
                            
                            .apple-cta-btn:hover {
                                transform: translateY(-1px);
                                box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.2), 0 10px 10px -5px rgba(59, 130, 246, 0.1);
                            }
                            
                            .apple-cta-btn:active {
                                transform: translateY(0);
                                box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.2), 0 4px 6px -2px rgba(59, 130, 246, 0.1);
                            }
                            
                            /* Sticky Floating Button */
                            .sticky-floating-btn {
                                position: relative;
                                overflow: hidden;
                                backdrop-filter: blur(10px);
                                -webkit-backdrop-filter: blur(10px);
                            }
                            
                            .sticky-floating-btn::before {
                                content: '';
                                position: absolute;
                                inset: 0;
                                background: linear-gradient(
                                    135deg,
                                    rgba(255, 255, 255, 0.15) 0%,
                                    rgba(255, 255, 255, 0) 50%,
                                    rgba(255, 255, 255, 0.15) 100%
                                );
                                opacity: 0;
                                transition: opacity 0.3s ease;
                            }
                            
                            .sticky-floating-btn:hover::before {
                                opacity: 1;
                            }
                            
                            .sticky-floating-btn:hover {
                                transform: translateY(-2px) scale(1.02);
                                box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.3), 0 10px 10px -5px rgba(59, 130, 246, 0.2);
                            }
                            
                            .sticky-floating-btn:active {
                                transform: translateY(0) scale(0.98);
                            }
                        </style>
                    </header>

                    {entry.data.videoId && (
                        <div class="mt-8 rounded-2xl overflow-hidden shadow-xl aspect-video bg-slate-100 dark:bg-slate-900 relative">
                            <iframe
                                class="w-full h-full"
                                src={`https://www.youtube.com/embed/${entry.data.videoId}?autoplay=1&mute=1&rel=0&modestbranding=1`}
                                title="YouTube video player"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                referrerpolicy="strict-origin-when-cross-origin"
                                allowfullscreen
                            />
                            
                            {/* Audio Reminder Notification */}
                            <div id="audio-reminder" class="absolute top-1/4 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-slate-900/90 dark:bg-slate-800/90 backdrop-blur-sm text-white px-4 py-2 rounded-full shadow-lg flex items-center gap-2 text-sm font-medium transition-opacity duration-500 pointer-events-none">
                                <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" />
                                </svg>
                                <span class="hidden sm:inline">Activa el sonido en la barra del video</span>
                            </div>
                            
                            <script>
                                // Fade out audio reminder after 5 seconds
                                const audioReminder = document.getElementById('audio-reminder');
                                if (audioReminder) {
                                    setTimeout(() => {
                                        audioReminder.style.opacity = '0';
                                        setTimeout(() => {
                                            audioReminder.style.display = 'none';
                                        }, 500);
                                    }, 5000);
                                }
                            </script>
                        </div>
                    )}

                    <div class="ai-content-wrapper">
                        <CourseContent />
                    </div>

                    {entry.data.documentUrl && (
                        <div class="mt-12">
                            <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-6 flex items-center gap-3">
                                <span class="bg-red-100 dark:bg-red-500/20 text-red-600 dark:text-red-400 p-2 rounded-lg">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                                    </svg>
                                </span>
                                Material adicional
                            </h2>
                            <div class="w-full h-[600px] md:h-[850px] rounded-2xl overflow-hidden shadow-xl border border-slate-200 dark:border-slate-700 bg-slate-100 dark:bg-slate-900">
                                <iframe
                                    src={`${entry.data.documentUrl}#toolbar=0`}
                                    class="w-full h-full"
                                    title={`Documento del curso ${entry.data.title}`}
                                >
                                </iframe>
                            </div>
                            <div class="mt-4 text-center md:text-right">
                                <a 
                                    href={entry.data.documentUrl} 
                                    target="_blank" 
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center gap-2 text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors"
                                >
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                    </svg>
                                    Abrir en nueva pesta침a
                                </a>
                            </div>
                        </div>
                    )}
                </article>

                {/* Sticky Floating CTA Button - Apple-Inspired Design */}
                <div id="sticky-cta" class="fixed bottom-6 right-6 z-50 opacity-0 pointer-events-none transition-all duration-300">
                    <a
                        href={entry.data.affiliateLink}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="sticky-floating-btn group flex items-center gap-2 px-6 py-3 bg-gradient-to-br from-blue-600 to-purple-600 dark:from-blue-500 dark:to-purple-500 text-white rounded-full font-semibold shadow-xl transition-all duration-300"
                    >
                        <svg
                            class="w-5 h-5 transition-transform group-hover:scale-110 duration-300"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
                            />
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                            />
                        </svg>
                        <span class="hidden sm:inline">Ir al Curso</span>
                    </a>
                </div>
            </div>
        ) : (
            /* CATEGORY LAYOUT */
            <div class="min-h-screen py-10 px-4">
                <div class="max-w-5xl mx-auto">
                    {/* Breadcrumbs */}
                    <nav class="mb-8 text-sm" aria-label="Breadcrumb">
                        <ol class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                            <li>
                                <a
                                    href="/"
                                    class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                                >
                                    Inicio
                                </a>
                            </li>
                            <li aria-hidden="true">/</li>
                            <li>
                                <a
                                    href="/cursos"
                                    class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                                >
                                    Cursos
                                </a>
                            </li>
                            <li aria-hidden="true">/</li>
                            <li>
                                <a
                                    href="/cursos#categorias"
                                    class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                                    >Categorias</a
                                >
                            </li>
                        </ol>
                    </nav>

                    {/* Header */}
                    <div class="text-center mb-12">
                        <div class="text-6xl mb-4 animate-bounce">
                            {entry.data.icon}
                        </div>
                        <h1 class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-600 via-blue-600 to-pink-600 dark:from-purple-400 dark:via-blue-500 dark:to-pink-500 mb-4">
                            Cursos de {entry.data.name}
                        </h1>
                        <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto mb-2">
                            {entry.data.description}
                        </p>
                        <p class="text-slate-500 dark:text-slate-500">
                            {categoryCourses.length}{" "}
                            {categoryCourses.length === 1 ? "curso" : "cursos"}{" "}
                            disponibles
                        </p>
                    </div>

                    {/* Courses Grid */}
                    <div class="mb-16">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            {categoryCourses.map((course) => (
                                <a
                                    href={`/cursos/${course.slug}`}
                                    class="group relative block p-6 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-2xl hover:-translate-y-1 hover:border-purple-500 hover:shadow-xl hover:shadow-purple-500/10 transition-all duration-300"
                                >
                                    <div class="flex items-start gap-4">
                                        <div class="text-4xl bg-slate-100 dark:bg-slate-700/50 p-3 rounded-xl group-hover:scale-110 transition-transform duration-300">
                                            {course.data.icon}
                                        </div>
                                        <div class="flex-1">
                                            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
                                                {course.data.title}
                                            </h3>
                                            <p class="text-slate-600 dark:text-slate-400 text-sm line-clamp-2 mb-3">
                                                {course.data.description}
                                            </p>
                                            {course.data.tags && course.data.tags.length > 0 && (
                                                <span class="text-xs font-medium px-2 py-1 bg-purple-100 dark:bg-purple-500/10 text-purple-700 dark:text-purple-300 rounded-full border border-purple-200 dark:border-purple-500/20">
                                                    {course.data.tags[0]}
                                                </span>
                                            )}
                                        </div>
                                    </div>

                                    <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-purple-600 dark:text-purple-400">
                                        <svg
                                            class="w-6 h-6"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M17 8l4 4m0 0l-4 4m4-4H3"
                                            />
                                        </svg>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </div>

                    {/* CTA */}
                    <div class="mt-16 p-8 bg-gradient-to-br from-purple-600 to-blue-600 rounded-2xl text-center text-white shadow-lg">
                        <h2 class="text-2xl font-bold mb-4">
                            游 쯃isto para comenzar?
                        </h2>
                        <p class="mb-6 text-purple-50">
                            Explora todos nuestros cursos gratuitos
                        </p>
                        <a
                            href="/cursos"
                            class="inline-block px-8 py-4 bg-white text-purple-600 rounded-xl font-bold text-lg hover:scale-105 hover:shadow-xl transition-all duration-300"
                        >
                            Ver Todos los Cursos 游닄
                        </a>
                    </div>
                </div>
            </div>
        )
    }

    <FAQSection faqs={generalFAQs} />

    {
        type === "course" && (
            <script>
                // Smart Back Button Logic
                const backButton = document.getElementById(
                    "back-button",
                ) as HTMLAnchorElement;

                if (backButton) {
                    const urlParams = new URLSearchParams(
                        window.location.search,
                    );
                    const ref = urlParams.get("ref");
                    const referrer = document.referrer;

                    let backUrl = "/cursos";

                    // Priority 1: Check URL parameter (ref)
                    if (ref) {
                        // Known category slugs
                        const knownCategories = [
                            "programacion",
                            "inteligencia-artificial",
                            "datos",
                            "idiomas",
                            "diseno",
                            "devops-cloud",
                            "productividad",
                            "negocios"
                        ];

                        // Known study plan slugs
                        const knownStudyPlans = [
                            "web-developer",
                            "inteligencia-artificial",
                            "analista-datos",
                            "ingles"
                        ];

                        if (ref.startsWith("categoria-")) {
                            // From category page (old format)
                            const categorySlug = ref.replace("categoria-", "");
                            backUrl = `/cursos#categoria-${categorySlug}`;
                        } else if (knownCategories.includes(ref)) {
                            // From category section in index
                            backUrl = `/cursos#categoria-${ref}`;
                        } else if (knownStudyPlans.includes(ref)) {
                            // From study plan page
                            backUrl = `/rutas/${ref}`;
                        } else if (ref.includes("#")) {
                            // Anchor-based ref
                            backUrl = `/cursos#${ref}`;
                        } else {
                            // Default: assume it's a category anchor
                            backUrl = `/cursos#${ref}`;
                        }
                    }
                    // Priority 2: Check document.referrer
                    else if (
                        referrer &&
                        referrer.includes(window.location.origin)
                    ) {
                        const referrerUrl = new URL(referrer);

                        if (referrerUrl.pathname.includes("/cursos/")) {
                            // Came from a category page (now under /cursos/) or another course
                             // This is tricky because /cursos/slug could be a category or course.
                             // But if they came from there, going back is safe.
                            backUrl = referrerUrl.pathname;
                        } else if (referrerUrl.pathname.includes("/rutas/")) {
                            // Came from a study plan page
                            backUrl = referrerUrl.pathname;
                        } else if (referrerUrl.pathname.includes("/blog/")) {
                            // Came from a blog post
                            backUrl = referrerUrl.pathname;
                        } else if (
                            referrerUrl.pathname === "/cursos" ||
                            referrerUrl.pathname === "/cursos/"
                        ) {
                            // Came from main courses page
                            backUrl = "/cursos";
                            if (referrerUrl.hash) {
                                backUrl += referrerUrl.hash;
                            }
                        }
                    }
                    // Priority 3: Default to category page
                    else {
                        const categorySlug = backButton.dataset.category;
                        if (categorySlug) {
                            backUrl = `/cursos/${categorySlug}`;
                        } else {
                            backUrl = "/cursos";
                        }
                    }

                    // Update button
                    backButton.href = backUrl;
                }

                // Sticky Floating CTA Button Logic
                const stickyCTA = document.getElementById("sticky-cta");
                let lastScrollY = window.scrollY;
                let ticking = false;

                function updateStickyCTA() {
                    const scrollY = window.scrollY;
                    const windowHeight = window.innerHeight;
                    const documentHeight = document.documentElement.scrollHeight;
                    
                    // Show button after scrolling down 400px
                    // Hide when near bottom (within 50px of footer)
                    if (scrollY > 400 && (documentHeight - scrollY - windowHeight) > 50) {
                        stickyCTA?.classList.remove("opacity-0", "pointer-events-none");
                        stickyCTA?.classList.add("opacity-100", "pointer-events-auto");
                    } else {
                        stickyCTA?.classList.add("opacity-0", "pointer-events-none");
                        stickyCTA?.classList.remove("opacity-100", "pointer-events-auto");
                    }
                    
                    lastScrollY = scrollY;
                    ticking = false;
                }

                function onScroll() {
                    if (!ticking) {
                        window.requestAnimationFrame(updateStickyCTA);
                        ticking = true;
                    }
                }

                window.addEventListener("scroll", onScroll, { passive: true });
                
                // Initial check
                updateStickyCTA();
            </script>
