---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import FAQSection from "../../components/FAQSection.astro";
import { getAllCategories } from "../../lib/categories";

export async function getStaticPaths() {
    const courses = await getCollection("courses");
    const categories = await getAllCategories();

    const coursePaths = courses.map((entry) => ({
        params: { slug: entry.slug },
        props: { type: "course" as const, entry },
    }));

    const categoryPaths = categories.map((entry) => ({
        params: { slug: entry.slug },
        props: { type: "category" as const, entry },
    }));

    return [...coursePaths, ...categoryPaths];
}

const { type, entry } = Astro.props;

// --- COURSE LOGIC ---
let CourseContent: any;
if (type === "course") {
    const { Content } = await entry.render();
    CourseContent = Content;
}

// --- CATEGORY LOGIC ---
let categoryCourses: CollectionEntry<"courses">[] = [];
if (type === "category") {
    const allCourses = await getCollection("courses");
    categoryCourses = allCourses
        .filter((course) => course.data.category === entry.slug)
        .sort(
            (a, b) =>
                b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
        );
}

// --- RELATED COURSES LOGIC ---
let relatedCourses: CollectionEntry<"courses">[] = [];
if (type === "course") {
    const allCourses = await getCollection("courses");
    // Filter courses from the same category, excluding the current course
    const sameCategoryCourses = allCourses.filter(
        (course) => 
            course.data.category === entry.data.category && 
            course.slug !== entry.slug
    );
    
    // Shuffle and take 2 random courses
    relatedCourses = sameCategoryCourses
        .sort(() => Math.random() - 0.5)
        .slice(0, 2);
}

// FAQ Data (Shared)
const generalFAQs = [
    {
        question: "¿Cómo funcionan los cursos?",
        answer: "Los cursos son 100% en línea y puedes hacerlos a tu ritmo. Tienes acceso completo a todas las clases en video, lecturas y actividades desde el momento de tu inscripción gratuita.",
    },
    {
        question: "¿Los cursos son realmente gratuitos?",
        answer: "Sí, la inscripción es 100% gratuita y te da acceso completo a todas las clases en video, lecturas y actividades. No necesitas pagar nada para aprender.",
    },
    {
        question: "¿Puedo obtener un certificado?",
        answerHTML: `<p class="mb-3">Sí, puedes obtener un <strong>certificado verificable internacionalmente</strong>. Tienes dos opciones:</p>
            <ul class="list-disc list-inside space-y-2 ml-4">
                <li>Adquirirlo al momento de inscribirte con un <strong>descuento especial</strong></li>
                <li>Comprarlo al finalizar el curso en su valor normal</li>
            </ul>`,
    },
    {
        question: "¿Qué incluye la certificación?",
        answerHTML: `<p class="mb-3">Al certificarte recibirás beneficios adicionales:</p>
            <ul class="list-disc list-inside space-y-2 ml-4">
                <li><strong>Acompañamiento personalizado</strong> del profesor</li>
                <li><strong>Retroalimentación</strong> de actividades</li>
                <li><strong>Soporte académico</strong> continuo</li>
                <li><strong>Constancias de estudio</strong> verificables</li>
            </ul>`,
    },
];

// Page Metadata
const pageTitle =
    type === "course"
        ? `${entry.data.title} | Cursos Gratuitos`
        : `Cursos de ${entry.data.name} Gratuitos | DevbyCes4r`;

const pageDescription =
    type === "course"
        ? entry.data.description
        : `Aprende ${entry.data.name.toLowerCase()} con nuestros ${categoryCourses.length} cursos gratuitos. ${entry.data.description}. Certificación opcional disponible.`;
---

<BaseLayout title={pageTitle} description={pageDescription} image={type === "course" ? (entry.data.coverImage || "/images/courses/default.webp") : "/images/courses/categories.webp"}>
    {
        type === "course" ? (
            /* COURSE LAYOUT */
            <div class="w-full max-w-5xl pb-8">
                <a
                    id="back-button"
                    href="/cursos/"
                    data-category={entry.data.category}
                    class="inline-flex items-center text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-white mb-4 md:mb-6 transition-colors"
                >
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18"
                        />
                    </svg>
                    Volver
                </a>

                    <header>
                        <div class="flex items-start gap-3 md:gap-4 lg:gap-6 mb-4 md:mb-5">
                            {/* Mobile: Sin icono (distrae) */}
                            {/* Tablet: Icono mediano */}
                            {/* Desktop: Cover image grande */}
                            
                            {/* Cover Image - Solo desktop con fallback a icono */}
                            {entry.data.coverImage ? (
                                <div class="hidden lg:block flex-shrink-0 w-44 h-28 rounded-xl overflow-hidden shadow-lg">
                                    <img 
                                        src={entry.data.coverImage} 
                                        alt={entry.data.title}
                                        class="w-full h-full object-cover"
                                        loading="eager"
                                    />
                                </div>
                            ) : (
                                <div class="hidden lg:flex flex-shrink-0 w-44 h-28 bg-slate-100 dark:bg-slate-700/50 rounded-xl items-center justify-center text-5xl shadow-inner">
                                    {entry.data.icon}
                                </div>
                            )}
                            
                            {/* Icon - Solo tablet (md a lg) */}
                            <div class="hidden md:flex lg:hidden flex-shrink-0 w-16 h-16 bg-slate-100 dark:bg-slate-700/50 rounded-xl items-center justify-center text-3xl shadow-inner">
                                {entry.data.icon}
                            </div>
                            
                            <div class="flex-1 min-w-0">
                                {/* Badge 100% Gratis con gradiente - Arriba del título */}
                                <div class="flex flex-wrap items-center gap-1.5 md:gap-2 mb-2">
                                    <span class="inline-flex items-center gap-1 px-2.5 py-0.5 md:px-3 md:py-1 bg-gradient-to-r from-emerald-500 to-teal-500 dark:from-emerald-400 dark:to-teal-400 text-white rounded-full text-xs font-bold shadow-sm">
                                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                                        100% Gratis
                                    </span>
                                    <span class="inline-flex items-center gap-1 px-2 py-0.5 md:px-2.5 md:py-1 bg-blue-100 dark:bg-blue-500/20 text-blue-700 dark:text-blue-300 rounded-full text-xs font-semibold">
                                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/></svg>
                                        Incluye certificado
                                    </span>
                                </div>
                                
                                <h1 class="text-lg md:text-2xl lg:text-3xl font-bold text-slate-900 dark:text-white mb-1.5 md:mb-3 leading-tight">
                                    {entry.data.title}
                                </h1>
                                
                                {/* Descripción: Siempre visible con line-clamp */}
                                <p class="text-sm md:text-base lg:text-lg text-slate-600 dark:text-slate-400 leading-snug mb-1.5 md:mb-2">
                                    {entry.data.description}
                                </p>

                                {/* Social proof condicional */}
                                {(entry.data.studentsCount || entry.data.rating || entry.data.platformProvider) && (
                                    <div class="mt-2 flex flex-wrap items-center gap-3 text-xs text-slate-500 dark:text-slate-400">
                                        {entry.data.studentsCount && (
                                            <>
                                                <span class="inline-flex items-center gap-1">
                                                    <svg class="w-3.5 h-3.5 text-blue-500" fill="currentColor" viewBox="0 0 20 20"><path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/></svg>
                                                    +{entry.data.studentsCount.toLocaleString('es')} estudiantes
                                                </span>
                                                {(entry.data.rating || entry.data.platformProvider) && <span class="text-slate-300 dark:text-slate-600">•</span>}
                                            </>
                                        )}
                                        {entry.data.rating && (
                                            <>
                                                <span class="inline-flex items-center gap-1">
                                                    <svg class="w-3.5 h-3.5 text-amber-500" fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a.75.75 0 01.673.418l1.882 3.815 4.21.612a.75.75 0 01.416 1.279l-3.046 2.97.719 4.192a.75.75 0 01-1.088.791L10 14.347l-3.766 1.98a.75.75 0 01-1.088-.79l.72-4.194L2.818 8.374a.75.75 0 01.416-1.28l4.21-.611L9.327 2.42A.75.75 0 0110 2z"/></svg>
                                                    {entry.data.rating.toFixed(1)}{entry.data.reviewsCount ? ` (${entry.data.reviewsCount.toLocaleString('es')} reseñas)` : ''}
                                                </span>
                                                {entry.data.platformProvider && <span class="text-slate-300 dark:text-slate-600">•</span>}
                                            </>
                                        )}
                                        {entry.data.platformProvider && (
                                            <span class="inline-flex items-center gap-1">
                                                <svg class="w-3.5 h-3.5 text-blue-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                                                {entry.data.platformProvider}
                                            </span>
                                        )}
                                    </div>
                                )}
                            </div>
                        </div>
                        
                        {/* Primary CTA Block - Optimized for conversion */}
                        <div class="flex flex-col items-stretch gap-2 mt-3 md:mt-4">
                            {/* CTA Button */}
                            <a
                                id="course-access-btn"
                                href={entry.data.affiliateLink}
                                target="_blank"
                                rel="noopener noreferrer"
                                data-course-slug={entry.slug}
                                data-course-title={entry.data.title}
                                data-course-category={entry.data.category}
                                class="apple-cta-btn group inline-flex items-center justify-center gap-2 px-8 md:px-10 py-3.5 md:py-4 my-4 md:my-8 bg-gradient-to-br from-blue-600 to-purple-600 dark:from-blue-500 dark:to-purple-500 text-white rounded-lg font-semibold text-base md:text-lg shadow-lg hover:shadow-xl transition-all duration-300 w-full md:w-auto md:min-w-[280px] md:self-end"
                            >
                                <span>Acceder al curso gratis</span>
                               <svg
                                class="w-5 h-5 transition-transform group-hover:translate-x-0.5 group-hover:-translate-y-0.5 duration-300"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                />
                            </svg>
                            </a>
                            
                            {/* Micro-copy de seguimiento - Oculto en móvil */}
                            <p class="hidden md:block text-xs text-center md:text-right text-slate-500 dark:text-slate-400 -mt-2 md:-mt-1">
                                Desarrolla habilidades demandadas y potencia tu perfil profesional.
                            </p>

                            {/* Trust signals - alineados a la izquierda en móvil */}
                            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-start md:justify-end gap-1.5 sm:gap-3 text-xs text-slate-600 dark:text-slate-400 pt-0.5 md:pt-1">
                                <span class="inline-flex items-center gap-1.5">
                                    <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                                    <span class="font-medium">Sin datos de tarjeta</span>
                                </span>
                                <span class="hidden sm:inline text-slate-300 dark:text-slate-600">|</span>
                                <span class="inline-flex items-center gap-1.5">
                                    <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                                    <span class="font-medium">Acceso inmediato</span>
                                </span>
                                <span class="hidden sm:inline text-slate-300 dark:text-slate-600">|</span>
                                <span class="inline-flex items-center gap-1.5">
                                    <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                                    <span class="font-medium">Certificado opcional</span>
                                </span>
                            </div>
                        </div>
                        
                        <style>
                            /* Apple-Inspired CTA Button */
                            .apple-cta-btn {
                                position: relative;
                                overflow: hidden;
                            }
                            
                            .apple-cta-btn::before {
                                content: '';
                                position: absolute;
                                inset: 0;
                                background: linear-gradient(
                                    135deg,
                                    rgba(255, 255, 255, 0.1) 0%,
                                    rgba(255, 255, 255, 0) 50%,
                                    rgba(255, 255, 255, 0.1) 100%
                                );
                                opacity: 0;
                                transition: opacity 0.3s ease;
                            }
                            
                            .apple-cta-btn:hover::before {
                                opacity: 1;
                            }
                            
                            .apple-cta-btn:hover {
                                transform: translateY(-1px);
                                box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.2), 0 10px 10px -5px rgba(59, 130, 246, 0.1);
                            }
                            
                            .apple-cta-btn:active {
                                transform: translateY(0);
                                box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.2), 0 4px 6px -2px rgba(59, 130, 246, 0.1);
                            }
                            
                            /* Sticky Floating Button */
                            .sticky-floating-btn {
                                position: relative;
                                overflow: hidden;
                                backdrop-filter: blur(10px);
                                -webkit-backdrop-filter: blur(10px);
                            }
                            
                            .sticky-floating-btn::before {
                                content: '';
                                position: absolute;
                                inset: 0;
                                background: linear-gradient(
                                    135deg,
                                    rgba(255, 255, 255, 0.15) 0%,
                                    rgba(255, 255, 255, 0) 50%,
                                    rgba(255, 255, 255, 0.15) 100%
                                );
                                opacity: 0;
                                transition: opacity 0.3s ease;
                            }
                            
                            .sticky-floating-btn:hover::before {
                                opacity: 1;
                            }
                            
                            .sticky-floating-btn:hover {
                                transform: translateY(-2px) scale(1.02);
                                box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.3), 0 10px 10px -5px rgba(59, 130, 246, 0.2);
                            }
                            
                            .sticky-floating-btn:active {
                                transform: translateY(0) scale(0.98);
                            }
                        </style>
                    </header>

                    {entry.data.videoId && (
                        <div class="mt-5 md:mt-6">
                            {/* Desktop: iframe con autoplay muted */}
                            <div class="hidden md:block">
                                <div class="overflow-hidden shadow-xl aspect-video bg-slate-100 dark:bg-slate-900 relative">
                                    <iframe
                                        class="w-full h-full"
                                        src={`https://www.youtube.com/embed/${entry.data.videoId}?autoplay=1&mute=1&rel=0&modestbranding=1`}
                                        title="Video de presentación del curso"
                                        frameborder="0"
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                        referrerpolicy="strict-origin-when-cross-origin"
                                        allowfullscreen
                                    />
                                    
                                    {/* Audio Reminder Notification */}
                                    <div id="audio-reminder" class="absolute top-1/4 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-slate-900/90 dark:bg-slate-800/90 backdrop-blur-sm text-white px-4 py-2 rounded-full shadow-lg flex items-center gap-2 text-sm font-medium transition-opacity duration-500 pointer-events-none">
                                        <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" />
                                        </svg>
                                        <span>Activa el sonido en la barra del video</span>
                                    </div>
                                </div>
                                <div class="bg-slate-900/90 dark:bg-slate-800/90 px-4 py-2 shadow-xl">
                                    <p class="text-sm text-white font-medium">Vídeo de presentación. Para ver el curso completo, haz clic en el botón «Acceder al curso gratis».</p>
                                </div>
                            </div>

                            {/* Móvil: Cover image con play centrado */}
                            <div class="md:hidden">
                                <div id="mobile-video-wrapper">
                                    <button
                                        id="mobile-play-btn"
                                        data-video-id={entry.data.videoId}
                                        class="mobile-video-thumb group relative w-full overflow-hidden shadow-xl aspect-video bg-slate-900 cursor-pointer block focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2"
                                        aria-label="Ver video de presentación del curso"
                                    >
                                        <img
                                            src={entry.data.coverImage || `https://img.youtube.com/vi/${entry.data.videoId}/hqdefault.jpg`}
                                            alt={`Presentación: ${entry.data.title}`}
                                            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105 group-active:scale-100"
                                            loading="lazy"
                                        />
                                        {/* Overlay oscuro */}
                                        <div class="absolute inset-0 bg-black/30 group-hover:bg-black/40 transition-colors duration-300" />
                                        {/* Botón play centrado */}
                                        <div class="absolute inset-0 flex items-center justify-center">
                                            <div class="w-16 h-16 rounded-full bg-white/90 dark:bg-white/95 shadow-lg flex items-center justify-center group-hover:scale-110 group-active:scale-95 transition-transform duration-200">
                                                <svg class="w-6 h-6 text-blue-600" viewBox="0 0 16 18" fill="currentColor" style="margin-left: 2px;">
                                                    <path d="M0 0v18l16-9L0 0z" />
                                                </svg>
                                            </div>
                                        </div>
                                    </button>
                                </div>
                                <div id="mobile-video-container" class="hidden">
                                    <div class="overflow-hidden shadow-xl aspect-video bg-slate-100 dark:bg-slate-900">
                                        <iframe
                                            id="mobile-video-iframe"
                                            class="w-full h-full"
                                            title="Video de presentación del curso"
                                            frameborder="0"
                                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                            referrerpolicy="strict-origin-when-cross-origin"
                                            allowfullscreen
                                        />
                                    </div>
                                </div>
                                <div class="bg-slate-900/90 dark:bg-slate-800/90 px-4 py-2 shadow-xl">
                                    <p class="text-center text-sm text-white font-medium">Vídeo de presentación. Para ver el curso completo, pulsa el botón «Acceder al curso gratis».</p>
                                </div>
                            </div>

                            <script>
                                // Desktop: Fade out audio reminder after 5 seconds
                                const audioReminder = document.getElementById('audio-reminder');
                                if (audioReminder) {
                                    setTimeout(() => {
                                        audioReminder.style.opacity = '0';
                                        setTimeout(() => {
                                            audioReminder.style.display = 'none';
                                        }, 500);
                                    }, 5000);
                                }

                                // Móvil: Cargar video con audio al hacer clic en la thumbnail
                                const mobilePlayBtn = document.getElementById('mobile-play-btn');
                                if (mobilePlayBtn) {
                                    mobilePlayBtn.addEventListener('click', () => {
                                        const videoId = mobilePlayBtn.getAttribute('data-video-id');
                                        const wrapper = document.getElementById('mobile-video-wrapper');
                                        const container = document.getElementById('mobile-video-container');
                                        const iframe = document.getElementById('mobile-video-iframe') as HTMLIFrameElement;
                                        
                                        if (iframe && videoId && wrapper && container) {
                                            iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0&modestbranding=1`;
                                            wrapper.classList.add('hidden');
                                            container.classList.remove('hidden');
                                        }
                                    });
                                }

                            </script>
                        </div>
                    )}

                    {/* Structured content from frontmatter */}
                    {entry.data.whyIntro ? (
                        <div class="ai-content-wrapper mt-8 space-y-10">
                            {/* Sección: ¿Por qué este curso? */}
                            <section>
