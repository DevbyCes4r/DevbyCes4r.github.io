---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import FAQSection from "../../../components/FAQSection.astro";
import { COURSE_CATEGORIES, type CategoryKey } from "../../../lib/categories";

export async function getStaticPaths() {
    return Object.keys(COURSE_CATEGORIES).map((key) => ({
        params: { slug: key },
    }));
}

const { slug } = Astro.params;
const category = COURSE_CATEGORIES[slug as CategoryKey];

if (!category) {
    return Astro.redirect("/404");
}

const allCourses = await getCollection("courses");
const categoryCourses = allCourses
    .filter((course) => course.data.mainCategory === slug)
    .sort(
        (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
    );

// FAQ Data - General FAQs about courses
const generalFAQs = [
    {
