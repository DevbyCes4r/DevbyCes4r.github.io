---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import FAQSection from "../../components/FAQSection.astro";
import { getAllCategories } from "../../lib/categories";
import { getAllRoutes } from "../../lib/routes";

const courses = await getCollection("courses");
const categories = await getAllCategories();
const routes = await getAllRoutes();
const links = await getCollection("links");

// Group courses by main category
type CategoryGrouped = Record<string, typeof courses>;
const coursesByCategory = courses.reduce<CategoryGrouped>((acc, course) => {
    const category = course.data.category || "otros";
    if (!acc[category]) {
        acc[category] = [];
    }
    acc[category].push(course);
    return acc;
}, {});

// Sort courses within each category by publishDate descending
Object.keys(coursesByCategory).forEach((category) => {
    coursesByCategory[category].sort(
        (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
    );
});

// Group courses by custom study plans
type GroupedCourses = Record<string, typeof courses>;
const groupedCourses = courses.reduce<GroupedCourses>((acc, course) => {
    const groups = course.data.group; // Already an array thanks to transform
    groups.forEach((group) => {
        if (!acc[group]) {
            acc[group] = [];
        }
        acc[group].push(course);
    });
    return acc;
}, {});

// Sort courses within each study plan group by orderGroup ascending
Object.keys(groupedCourses).forEach((group) => {
    groupedCourses[group].sort((a, b) => a.data.orderGroup - b.data.orderGroup);
});

// Study plans are already sorted by the helper function

// FAQ Data
