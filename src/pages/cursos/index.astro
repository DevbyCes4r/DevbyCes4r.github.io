                                    <div class="h-px bg-slate-200 dark:bg-slate-800 flex-grow" />
                                </div>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    {groupedCourses[groupTitle].map(
                                        (course) => (
                                            <a
                                                href={`/cursos/${course.slug}?ref=${groupTitle.toLowerCase().replace(/ /g, "-")}`}
                                                class="group relative block p-6 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-2xl hover:-translate-y-1 hover:border-blue-500 hover:shadow-xl hover:shadow-blue-500/10 transition-all duration-300"
                                            >
                                                <div class="flex items-start gap-4">
                                                    <div class="text-4xl bg-slate-100 dark:bg-slate-700/50 p-3 rounded-xl group-hover:scale-110 transition-transform duration-300">
                                                        {course.data.icon}
                                                    </div>
                                                    <div>
                                                        <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                                                            {course.data.title}
                                                        </h3>
                                                        <p class="text-slate-600 dark:text-slate-400 text-sm line-clamp-2 mb-3">
