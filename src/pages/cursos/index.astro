---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import FAQSection from "../../components/FAQSection.astro";
import { COURSE_CATEGORIES, type CategoryKey } from "../../lib/categories";

const courses = await getCollection("courses");

// Group courses by main category
type CategoryGrouped = Record<string, typeof courses>;
const coursesByCategory = courses.reduce<CategoryGrouped>((acc, course) => {
    const category = course.data.mainCategory || "otros";
    if (!acc[category]) {
        acc[category] = [];
    }
    acc[category].push(course);
    return acc;
}, {});

// Group courses by custom study plans
type GroupedCourses = Record<string, typeof courses>;
const groupedCourses = courses.reduce<GroupedCourses>((acc, course) => {
    const groups = course.data.group; // Already an array thanks to transform
    groups.forEach((group) => {
        if (!acc[group]) {
            acc[group] = [];
        }
        acc[group].push(course);
    });
    return acc;
}, {});

// Define group order for study plans
const groupOrder = [
    "10 cursos gratuitos para web developer",
    "5 cursos gratis de inteligencia artificial",
    "10 Cursos GRATIS para Analistas de Datos y DBA",
    "7 Cursos GRATUITOS para Aprender Ingl√©s",
];

// FAQ Data
const generalFAQs = [
    {
        question: "¬øC√≥mo funcionan los cursos?",
