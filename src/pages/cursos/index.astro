    <script>
        import { trackSearch, waitForGoatCounter } from '../../utils/analytics';

        const searchInput = document.getElementById("courseSearch") as HTMLInputElement;
        const searchResultsSection = document.getElementById("searchResultsSection") as HTMLElement;
        const searchResultsHeader = document.getElementById("searchResultsHeader") as HTMLElement;
        const searchResultsGrid = document.getElementById("searchResultsGrid") as HTMLElement;
        const noResults = document.getElementById("noResults") as HTMLElement;
        const resultsCount = document.getElementById("resultsCount") as HTMLElement;
        const clearButton = document.getElementById("clearSearch") as HTMLButtonElement;

        // Get all course cards and their parent sections
        // Filter out duplicates based on course slug
        const distinctCourses = new Set();
        const courseCards = Array.from(
            document.querySelectorAll(
                'a[href^="/cursos/"][class*="group relative block"]',
            ),
        ).filter((card) => {
            const href = card.getAttribute("href")?.split("?")[0];
            if (!href || distinctCourses.has(href)) {
                return false;
            }
            distinctCourses.add(href);
            return true;
        });

        // Debounce function for performance
        function debounce(func: Function, wait: number) {
            let timeout: ReturnType<typeof setTimeout>;
            return function executedFunction(...args: any[]) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // Scroll to search element on focus
        searchInput.addEventListener("focus", () => {
            setTimeout(() => {
                const searchElement = document.getElementById("buscar");
                if (searchElement) {
                    searchElement.scrollIntoView({
                        behavior: "smooth",
                        block: "start",
                    });
                }
            }, 100);
        });

        // Clear search functionality
        clearButton.addEventListener("click", () => {
            searchInput.value = "";
            updateSearchUI();
            searchInput.focus();
        });

        // Helper to normalize text (remove accents and lower case)
        function normalizeText(text: string) {
            return text
                .toLowerCase()
                .normalize("NFD")
                .replace(/[\u0300-\u036f]/g, "");
        }

        function updateSearchUI() {
            const searchTerm = normalizeText(searchInput.value.trim());

            // Toggle clear button visibility
            if (searchTerm) {
                clearButton.classList.remove("opacity-0", "invisible");
            } else {
                clearButton.classList.add("opacity-0", "invisible");
                // Hide results section when search is empty
                searchResultsSection.classList.add("hidden");
                searchResultsGrid.innerHTML = "";
                return;
            }

            // Perform search
            const matchedCards = courseCards.filter((card) => {
                const cardElement = card as HTMLElement;
                const title = normalizeText(
                    cardElement.querySelector("h3")?.textContent || "",
                );
                const description = normalizeText(
                    cardElement.querySelector("p")?.textContent || "",
                );
                const tag = normalizeText(
                    cardElement.querySelector(
                        'span[class*="bg-purple-100"], span[class*="bg-blue-100"]',
                    )?.textContent || "",
                );

                return (
                    title.includes(searchTerm) ||
                    description.includes(searchTerm) ||
                    tag.includes(searchTerm)
                );
            });

            // Show results section
            searchResultsSection.classList.remove("hidden");
            searchResultsGrid.innerHTML = "";

            if (matchedCards.length > 0) {
                searchResultsHeader.classList.remove("hidden");
                noResults.classList.add("hidden");
                resultsCount.textContent = matchedCards.length.toString();

                matchedCards.forEach((card) => {
                    const clone = card.cloneNode(true) as HTMLElement;
                    clone.style.opacity = "0";
                    clone.style.display = "";
                    searchResultsGrid.appendChild(clone);

                    requestAnimationFrame(() => {
                        clone.style.transition = "opacity 0.3s ease-out, transform 0.3s ease-out";
                        clone.style.opacity = "1";
                    });
                });
            } else {
                searchResultsHeader.classList.add("hidden");
                noResults.classList.remove("hidden");
                resultsCount.textContent = "0";
            }
            
            // Solo trackear b√∫squedas (clave para detectar contenido faltante)
            waitForGoatCounter(() => trackSearch(searchTerm, matchedCards.length));
        }

        // Add event listener with debouncing
        searchInput.addEventListener("input", debounce(updateSearchUI, 300));
    </script>
