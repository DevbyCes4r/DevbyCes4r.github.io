      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    /* Hide desktop-only cards on mobile */
    .planet-card-desktop {
      display: none;
    }
    @media (min-width: 1024px) {
      .planet-card-desktop {
        display: flex;
      }
    }

    :global(.dark) .planet-card {
      background: rgba(30, 41, 59, 0.9);
      border-color: rgba(71, 85, 105, 0.3);
    }

    .planet-card:hover {
      transform: translateY(-8px) scale(1.05);
      box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
    }

    /* Planet Card Elements */
    .planet-icon {
      font-size: 2rem;
      margin-bottom: 0.5rem;
      transition: transform 0.3s ease;
    }
    .group:hover .planet-icon {
      transform: scale(1.1);
    }

    .planet-title {
      font-weight: 700;
      font-size: 0.875rem;
      color: #0f172a;
      transition: color 0.3s ease;
      margin-bottom: 0.25rem;
    }
    :global(.dark) .planet-title {
      color: white;
    }

    .planet-subtitle {
      font-size: 0.75rem;
      color: #64748b;
    }
    :global(.dark) .planet-subtitle {
      color: #94a3b8;
    }

    /* Mobile Cards */
    .planet-card-mobile {
      width: 100%;
      height: 80px;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(10px);
      border: 2px solid rgba(203, 213, 225, 0.3);
      border-radius: 16px;
      padding: 0.75rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    :global(.dark) .planet-card-mobile {
      background: rgba(30, 41, 59, 0.9);
      border-color: rgba(71, 85, 105, 0.3);
    }

    .planet-icon-mobile {
      font-size: 1.5rem;
      margin-bottom: 0.25rem;
    }

    .planet-title-mobile {
      font-weight: 700;
      font-size: 0.75rem;
      color: #0f172a;
      transition: color 0.3s ease;
    }
    :global(.dark) .planet-title-mobile {
      color: white;
    }

    /* Hover colors for icons */
