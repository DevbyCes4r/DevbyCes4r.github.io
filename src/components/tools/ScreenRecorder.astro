<script>
    let mediaRecorder: MediaRecorder | null = null;
    let recordedChunks: BlobPart[] = [];
    let startTime: number;
    let timerInterval: number;

    const startBtn = document.getElementById("startBtn") as HTMLButtonElement;
    const stopBtn = document.getElementById("stopBtn") as HTMLButtonElement;
    const preview = document.getElementById("preview") as HTMLVideoElement;
    const downloadBtn = document.getElementById(
        "downloadBtn",
    ) as HTMLAnchorElement;
    const placeholder = document.getElementById(
        "placeholder",
    ) as HTMLDivElement;
    const actions = document.getElementById("actions") as HTMLDivElement;
    const statusContainer = document.getElementById(
        "statusContainer",
    ) as HTMLDivElement;
    const timerDisplay = document.getElementById("timer") as HTMLSpanElement;

    function formatTime(seconds: number) {
        const mins = Math.floor(seconds / 60)
            .toString()
            .padStart(2, "0");
        const secs = (seconds % 60).toString().padStart(2, "0");
        return `${mins}:${secs}`;
    }

    function startTimer() {
        startTime = Date.now();
        timerInterval = window.setInterval(() => {
            const elapsed = Math.floor((Date.now() - startTime) / 1000);
            if (timerDisplay) timerDisplay.textContent = formatTime(elapsed);
        }, 1000);
    }

    function stopTimer() {
        clearInterval(timerInterval);
        if (timerDisplay) timerDisplay.textContent = "00:00";
    }

    if (startBtn) {
        startBtn.addEventListener("click", async () => {
            try {
                const stream = await navigator.mediaDevices.getDisplayMedia({
                    video: {
                        // @ts-ignore - mediaSource is a valid constraint for getDisplayMedia but TS might complain
                        mediaSource: "screen",
                    },
                    audio: true,
                });

                mediaRecorder = new MediaRecorder(stream, {
                    mimeType: "video/webm; codecs=vp9",
                });

                mediaRecorder.ondataavailable = (event) => {
                    if (event.data.size > 0) {
                        recordedChunks.push(event.data);
                    }
                };

                mediaRecorder.onstop = () => {
                    stopTimer();
                    if (statusContainer)
                        statusContainer.classList.add("hidden");
                    if (stopBtn) stopBtn.classList.add("hidden");
                    if (startBtn) {
                        startBtn.classList.remove("hidden");
                        startBtn.innerHTML =
                            '<span class="text-xl">üîÑ</span> Grabar Nueva';
                    }

                    const blob = new Blob(recordedChunks, {
                        type: "video/webm",
                    });
                    const url = URL.createObjectURL(blob);

                    if (preview) {
                        preview.src = url;
                        preview.classList.remove("hidden");
                    }
                    if (placeholder) placeholder.classList.add("hidden");

                    if (downloadBtn) {
                        downloadBtn.href = url;
                        downloadBtn.download = `grabacion-${new Date().toISOString().slice(0, 19).replace(/:/g, "-")}.webm`;
                    }
                    if (actions) actions.classList.remove("hidden");

                    // Stop all tracks to release camera/screen
                    stream.getTracks().forEach((track) => track.stop());
                };

                // Handle user clicking "Stop sharing" from browser UI
                stream.getVideoTracks()[0].onended = () => {
                    if (mediaRecorder && mediaRecorder.state !== "inactive") {
                        mediaRecorder.stop();
                    }
                };

                mediaRecorder.start();
                recordedChunks = [];

                // UI Updates
                startBtn.classList.add("hidden");
                if (stopBtn) {
                    stopBtn.classList.remove("hidden");
                    stopBtn.disabled = false;
                }
                if (statusContainer) statusContainer.classList.remove("hidden");
                if (actions) actions.classList.add("hidden");
                if (preview) preview.classList.add("hidden");
                if (placeholder) placeholder.classList.remove("hidden");

                startTimer();
            } catch (err) {
                console.error("Error: " + err);
            }
        });
    }

    if (stopBtn) {
        stopBtn.addEventListener("click", () => {
            if (mediaRecorder) mediaRecorder.stop();
        });
    }
</script>
