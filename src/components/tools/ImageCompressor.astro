<script>
    const dropZone = document.getElementById("drop-zone") as HTMLDivElement;
    const fileInput = document.getElementById("file-input") as HTMLInputElement;
    const editorArea = document.getElementById("editor-area") as HTMLDivElement;
    const qualityInput = document.getElementById("quality") as HTMLInputElement;
    const qualityValue = document.getElementById(
        "quality-value",
    ) as HTMLSpanElement;
    const originalPreview = document.getElementById(
        "original-preview",
    ) as HTMLImageElement;
    const compressedPreview = document.getElementById(
        "compressed-preview",
    ) as HTMLImageElement;
    const originalSizeDisplay = document.getElementById(
        "original-size",
    ) as HTMLParagraphElement;
    const compressedSizeDisplay = document.getElementById(
        "compressed-size",
    ) as HTMLParagraphElement;
    const savingsDisplay = document.getElementById(
        "savings",
    ) as HTMLParagraphElement;
    const downloadBtn = document.getElementById(
        "download-btn",
    ) as HTMLAnchorElement;

    let originalFile: File | null = null;

    function formatBytes(bytes: number, decimals = 2) {
        if (bytes === 0) return "0 Bytes";
        const k = 1024;
        const dm = decimals < 0 ? 0 : decimals;
        const sizes = ["Bytes", "KB", "MB", "GB"];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return (
            parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + " " + sizes[i]
        );
    }

    function handleFile(file: File) {
        if (!file.type.match(/image.*/)) return;

        originalFile = file;
        originalSizeDisplay.textContent = formatBytes(file.size);

        const reader = new FileReader();
        reader.onload = (e) => {
            originalPreview.src = e.target?.result as string;
            compressImage();
            editorArea.classList.remove("hidden");
            dropZone.classList.add("hidden");
        };
        reader.readAsDataURL(file);
    }

    function compressImage() {
        if (!originalFile) return;

        const quality = parseInt(qualityInput.value) / 100;
        const img = new Image();

        img.onload = () => {
            const canvas = document.createElement("canvas");
            canvas.width = img.width;
            canvas.height = img.height;

            const ctx = canvas.getContext("2d");
            if (!ctx) return;

            ctx.drawImage(img, 0, 0);

            // Compress
            canvas.toBlob(
                (blob) => {
                    if (!blob) return;

                    const url = URL.createObjectURL(blob);
                    compressedPreview.src = url;
                    compressedSizeDisplay.textContent = formatBytes(blob.size);

                    // Calculate savings
                    if (originalFile) {
                        const savings =
                            ((originalFile.size - blob.size) /
                                originalFile.size) *
                            100;
                        savingsDisplay.textContent = `${savings.toFixed(1)}%`;

                        // Update download link
                        downloadBtn.href = url;
                        downloadBtn.download = `compressed-${originalFile.name}`;
                    }
                },
                originalFile?.type,
                quality,
            );
        };
        img.src = originalPreview.src;
    }

    // Event Listeners
    dropZone.addEventListener("click", () => fileInput.click());

    dropZone.addEventListener("dragover", (e) => {
        e.preventDefault();
        dropZone.classList.add(
            "border-orange-500",
            "bg-orange-50",
            "dark:bg-orange-900/10",
        );
    });

    dropZone.addEventListener("dragleave", () => {
        dropZone.classList.remove(
            "border-orange-500",
            "bg-orange-50",
            "dark:bg-orange-900/10",
        );
    });

    dropZone.addEventListener("drop", (e) => {
        e.preventDefault();
        dropZone.classList.remove(
            "border-orange-500",
            "bg-orange-50",
            "dark:bg-orange-900/10",
        );
        if (e.dataTransfer?.files.length) {
            handleFile(e.dataTransfer.files[0]);
        }
    });

    fileInput.addEventListener("change", (e) => {
        if (fileInput.files?.length) {
            handleFile(fileInput.files[0]);
        }
    });

    qualityInput.addEventListener("input", () => {
        qualityValue.textContent = `${qualityInput.value}%`;
        compressImage();
    });
</script>
